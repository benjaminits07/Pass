{% extends 'base.html.twig' %}

{% block title %}Welcome !{% endblock %}

{% block body %}
    <div class="content">
            <p>
                {{ clients.description|raw }}
            </p>
        <h1>{{ clients.name }}</h1>
        {% if listPassword %}
            <table class="table table-bordered table-striped table-hover">
                <thead>
                    <tr>
                      <th>Title</th>
                      <th>Login</th>
                      <th>Password</th>
                      <th>url</th>
                    </tr>
                </thead>
                <tbody>
                    {% for item in listPassword %}
                        <tr>
                          <td>{{ item.title}}</td>
                          <td>{{ item.login}}</td>
                          <td>{{ item.password}}</td>
                          <td><a href="http://{{ item.url }}" target="_blank">{{ item.url }}</a></td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% else %}
            <p>No password</p>
        {% endif %}
    </div>

{% endblock %}
